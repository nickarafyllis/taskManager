<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.taskmanager.controller.MainController">

    <top>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label text="MediaLab Assistant" style="-fx-font-size: 24px; -fx-padding: 10;" />
            <HBox spacing="20">
                <Label fx:id="totalTasksLabel" text="Total Tasks: 0" />
                <Label fx:id="completedTasksLabel" text="Completed: 0" />
                <Label fx:id="delayedTasksLabel" text="Delayed: 0" />
                <Label fx:id="upcomingTasksLabel" text="Upcoming (7 days): 0" />
            </HBox>

            <!-- Search Bar -->
            <HBox spacing="10" style="-fx-padding: 10;">
                <TextField fx:id="searchTitleField" promptText="Search by Title"/>
                <ComboBox fx:id="searchCategoryComboBox" promptText="Filter by Category"/>
                <ComboBox fx:id="searchPriorityComboBox" promptText="Filter by Priority"/>
                <Button text="Search" onAction="#handleSearch"/>
                <Button text="Clear" onAction="#clearSearch"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="taskTable" minWidth="800" minHeight="150" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="titleColumn" text="Title" minWidth="80" />
                <TableColumn fx:id="descriptionColumn" text="Description" minWidth="200" />
                <TableColumn fx:id="categoryColumn" text="Category" minWidth="60" />
                <TableColumn fx:id="priorityColumn" text="Priority" minWidth="50" />
                <TableColumn fx:id="deadlineColumn" text="Deadline" minWidth="60" />
                <TableColumn fx:id="statusColumn" text="Status" minWidth="140" />
                <TableColumn text="Actions" fx:id="editColumn" minWidth="20" />
                <TableColumn text="Reminders" fx:id="reminderColumn" minWidth="70" />
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="10" style="-fx-padding: 10;">
            <HBox spacing="10">
                <Button fx:id="addButton" text="Add Task" onAction="#openAddTaskWindow" />
            </HBox>
            <HBox spacing="10">
                <Button fx:id="manageCategoriesButton" text="Manage Categories" onAction="#openManageCategoriesWindow" />
                <Button fx:id="managePrioritiesButton" text="Manage Priorities" onAction="#openManagePrioritiesWindow" />
                <Button fx:id="manageRemindersButton" text="Manage Reminders" onAction="#openManageRemindersWindow" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
